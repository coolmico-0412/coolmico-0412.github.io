    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+Thai:wght@400;700&display=swap');
        body { font-family: 'Noto Sans Thai', 'ui-sans-serif', system-ui, sans-serif; -webkit-tap-highlight-color: transparent; }
        .page { display: none; }
        .page.active { display: block; }
        #video-container { position: relative; width: 100%; max-width: 500px; margin: auto; overflow: hidden; border-radius: 20px; }
        #video-preview { width: 100%; height: auto; background: #000; }
        .scan-overlay {
            position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);
            width: 70%; height: 30%; border: 3px solid #3b82f6; box-shadow: 0 0 0 1000px rgba(0,0,0,0.5);
            pointer-events: none; border-radius: 8px;
        }
        .modal { display: none; }
        .modal.active { display: flex; }
        input[type="date"], input[type="month"] { -webkit-appearance: none; }
    </style>
</head>
<body class="bg-gray-100 min-h-screen">

    <!-- 導覽列 Navbar -->
    <nav class="bg-blue-700 text-white p-4 sticky top-0 z-50 flex justify-between items-center shadow-lg">
        <h1 class="text-xl font-bold flex flex-col">
            <span>ระบบสแกนขายสินค้า</span>
            <span class="text-[10px] font-normal opacity-80">POS 掃描收銀系統</span>
        </h1>
        <div class="space-x-6 flex">
            <button onclick="showPage('scan-page')" class="flex flex-col items-center">
                <span class="font-bold text-lg">ชำระเงิน</span>
                <span class="text-[10px] opacity-80">收銀</span>
            </button>
            <button onclick="showPage('report-page')" class="flex flex-col items-center">
                <span class="font-bold text-lg">รายงาน</span>
                <span class="text-[10px] opacity-80">報表</span>
            </button>
        </div>
    </nav>

    <!-- 收銀頁面 -->
    <div id="scan-page" class="page active p-4 max-w-2xl mx-auto pb-24">
        <div class="bg-white rounded-3xl shadow-sm p-5 mb-6">
            <h2 class="text-xl font-bold mb-4">สแกนบาร์โค้ด (掃描條碼)</h2>
            <div id="video-container">
                <video id="video-preview" autoplay playsinline muted></video>
                <div class="scan-overlay"></div>
            </div>
            <div class="mt-5 flex gap-3">
                <button id="start-btn" onclick="startScanner()" class="bg-emerald-500 text-white px-4 py-4 rounded-2xl flex-1 flex flex-col items-center justify-center shadow-lg active:scale-95 transition-transform">
                    <span class="font-bold text-lg">เปิดกล้อง</span>
                    <span class="text-xs">開啟相機</span>
                </button>
                <button id="stop-btn" onclick="stopScanner()" class="bg-rose-500 text-white px-4 py-4 rounded-2xl flex-1 hidden flex flex-col items-center justify-center shadow-lg active:scale-95">
                    <span class="font-bold text-lg">ปิดกล้อง</span>
                    <span class="text-xs">關閉相機</span>
                </button>
            </div>
        </div>

        <div class="bg-white rounded-3xl shadow-sm p-5">
            <h2 class="text-xl font-bold mb-5 flex justify-between items-center">
                <span>รายการสินค้า (購物清單)</span>
                <span id="item-count" class="text-sm bg-blue-50 text-blue-600 px-4 py-1 rounded-full font-bold">0 รายการ</span>
            </h2>
            <div id="cart-items" class="space-y-4 min-h-[250px] border-b border-dashed pb-6 mb-6"></div>
            <div class="flex justify-between items-center mb-8 px-2">
                <span class="text-2xl font-bold text-gray-800">ยอดรวมทั้งหมด (總計)</span>
                <span class="text-3xl font-black text-blue-700">NT$ <span id="total-price">0</span></span>
            </div>
            <button onclick="checkout()" class="w-full bg-blue-700 text-white py-6 rounded-2xl text-2xl font-bold shadow-xl active:scale-95 flex flex-col items-center">
                <span>ยืนยันการชำระเงิน</span>
                <span class="text-xs font-normal opacity-70">確認結帳</span>
            </button>
        </div>
    </div>

    <!-- 報表頁面 -->
    <div id="report-page" class="page p-4 max-w-4xl mx-auto pb-20">
        <div class="flex flex-col gap-6">
            <!-- 日報表區塊 -->
            <div class="bg-white p-6 rounded-3xl shadow-sm">
                <div class="flex justify-between items-center mb-6">
                    <div>
                        <h3 class="text-xl font-bold text-gray-800">รายงานรายวัน</h3>
                        <p class="text-xs text-gray-400">日報表清單</p>
                    </div>
                    <input type="date" id="daily-date-picker" onchange="updateDailyReport()" class="bg-gray-50 border-0 rounded-xl px-3 py-2 text-sm font-bold text-blue-700 outline-none">
                </div>
                <div id="daily-report-list" class="space-y-3">
                    <!-- 日報表清單內容 -->
                </div>
                <div id="daily-total" class="mt-4 pt-4 border-t border-dashed text-right font-bold text-lg text-blue-600"></div>
            </div>

            <!-- 月報表區塊 -->
            <div class="bg-white p-6 rounded-3xl shadow-sm">
                <div class="flex justify-between items-center mb-6">
                    <div>
                        <h3 class="text-xl font-bold text-gray-800">รายงานรายเดือน</h3>
                        <p class="text-xs text-gray-400">月報表摘要</p>
                    </div>
                    <input type="month" id="monthly-date-picker" onchange="updateMonthlyReport()" class="bg-gray-50 border-0 rounded-xl px-3 py-2 text-sm font-bold text-emerald-700 outline-none">
                </div>
                <div id="monthly-report-list" class="space-y-3">
                    <!-- 月報表清單內容 -->
                </div>
                <div id="monthly-total" class="mt-4 pt-4 border-t border-dashed text-right font-bold text-lg text-emerald-600"></div>
            </div>
        </div>
    </div>

    <!-- 交易明細彈窗 -->
    <div id="detail-modal" class="modal fixed inset-0 bg-black/70 backdrop-blur-md z-[110] items-center justify-center p-4">
        <div class="bg-white w-full max-w-md rounded-[2.5rem] shadow-2xl p-8 overflow-hidden flex flex-col max-h-[90vh]">
            <div class="text-center mb-6">
                <h3 class="text-2xl font-bold text-gray-800">รายละเอียดรายการ</h3>
                <p class="text-blue-600 text-sm">交易明細</p>
            </div>
            <div id="detail-content" class="flex-1 overflow-y-auto pr-2 space-y-4">
                <!-- 明細內容 -->
            </div>
            <div id="detail-summary" class="mt-6 pt-6 border-t border-gray-100 flex justify-between items-center">
                <!-- 總計內容 -->
            </div>
            <button onclick="closeModal('detail-modal')" class="mt-8 w-full py-4 bg-gray-100 rounded-2xl font-bold text-gray-500">ปิด (關閉)</button>
        </div>
    </div>

    <!-- 產品編輯彈窗 -->
    <div id="product-modal" class="modal fixed inset-0 bg-black/70 backdrop-blur-md z-[100] items-center justify-center p-4">
        <div class="bg-white w-full max-w-md rounded-[2.5rem] p-8">
            <h3 id="modal-title" class="text-2xl font-bold text-center mb-1">ข้อมูลสินค้า</h3>
            <p id="modal-barcode" class="text-center text-blue-600 font-mono mb-6"></p>
            <div class="space-y-4">
                <input type="text" id="new-product-name" placeholder="ชื่อสินค้า (品名)" class="w-full bg-gray-50 rounded-2xl px-5 py-4 outline-none font-bold">
                <input type="number" id="new-product-price" placeholder="ราคา (價格)" class="w-full bg-gray-50 rounded-2xl px-5 py-4 outline-none font-bold text-xl">
            </div>
            <div class="flex gap-4 mt-8">
                <button onclick="closeModal('product-modal')" class="flex-1 py-4 text-gray-400 font-bold">ยกเลิก</button>
                <button onclick="saveNewProduct()" class="flex-1 py-4 bg-blue-700 text-white rounded-2xl font-bold">บันทึก (儲存)</button>
            </div>
        </div>
    </div>

    <!-- Toast -->
    <div id="toast" class="fixed bottom-12 left-1/2 -translate-x-1/2 bg-gray-900/90 text-white px-8 py-4 rounded-3xl opacity-0 transition-all pointer-events-none z-[200] text-center shadow-xl"></div>

    <script>
        // 初始化日期選擇器為今天與本月
        const now = new Date();
        document.getElementById('daily-date-picker').value = now.toISOString().split('T')[0];
        document.getElementById('monthly-date-picker').value = now.toISOString().slice(0, 7);

        let products = JSON.parse(localStorage.getItem('pos_custom_products') || '{}');
        let cart = [];
        let salesHistory = JSON.parse(localStorage.getItem('pos_sales_history') || '[]');
        let videoStream = null;
        let scanInterval = null;
        let pendingBarcode = null;

        function showPage(pageId) {
            document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
            document.getElementById(pageId).classList.add('active');
            if(pageId === 'report-page') { updateDailyReport(); updateMonthlyReport(); }
        }

        // --- 報表邏輯 ---

        function updateDailyReport() {
            const selectedDate = document.getElementById('daily-date-picker').value;
            const container = document.getElementById('daily-report-list');
            const totalDiv = document.getElementById('daily-total');
            
            const filtered = salesHistory.filter(tx => tx.time.startsWith(selectedDate));
            let total = 0;

            if (filtered.length === 0) {
                container.innerHTML = `<p class="text-center text-gray-300 py-8 italic text-sm">ไม่มีข้อมูลรายการ (當日無交易)</p>`;
                totalDiv.innerText = "ยอดรวมรายวัน: NT$ 0";
                return;
            }

            container.innerHTML = filtered.map(tx => {
                total += tx.total;
                return `
                    <div onclick="showTransactionDetail(${tx.id})" class="flex justify-between items-center p-4 bg-gray-50 rounded-2xl border border-transparent active:border-blue-300 active:bg-blue-50 transition-all">
                        <div>
                            <p class="font-bold text-gray-800">${new Date(tx.time).toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'})}</p>
                            <p class="text-[10px] text-gray-400">${tx.items.length} รายการ (品項)</p>
                        </div>
                        <div class="text-right">
                            <p class="font-black text-lg text-blue-700">NT$ ${tx.total}</p>
                            <p class="text-[10px] text-blue-500 font-bold">ดูรายละเอียด ></p>
                        </div>
                    </div>
                `;
            }).join('');
            totalDiv.innerText = `ยอดรวมรายวัน (當日總計): NT$ ${total.toLocaleString()}`;
        }

        function updateMonthlyReport() {
            const selectedMonth = document.getElementById('monthly-date-picker').value; // YYYY-MM
            const container = document.getElementById('monthly-report-list');
            const totalDiv = document.getElementById('monthly-total');
            
            const monthSales = {};
            let total = 0;

            salesHistory.forEach(tx => {
                if (tx.time.startsWith(selectedMonth)) {
                    const date = tx.time.split('T')[0];
                    monthSales[date] = (monthSales[date] || 0) + tx.total;
                    total += tx.total;
                }
            });

            const sortedDates = Object.keys(monthSales).sort().reverse();

            if (sortedDates.length === 0) {
                container.innerHTML = `<p class="text-center text-gray-300 py-8 italic text-sm">ไม่มีข้อมูลรายการ (當月無交易)</p>`;
                totalDiv.innerText = "ยอดรวมรายเดือน: NT$ 0";
                return;
            }

            container.innerHTML = sortedDates.map(date => `
                <div class="flex justify-between items-center p-4 bg-emerald-50/30 border border-emerald-100 rounded-2xl">
                    <div>
                        <p class="font-bold text-gray-800">${date}</p>
                    </div>
                    <p class="font-black text-lg text-emerald-700">NT$ ${monthSales[date].toLocaleString()}</p>
                </div>
            `).join('');
            totalDiv.innerText = `ยอดรวมรายเดือน (當月總計): NT$ ${total.toLocaleString()}`;
        }

        function showTransactionDetail(txId) {
            const tx = salesHistory.find(t => t.id === txId);
            if (!tx) return;

            const content = document.getElementById('detail-content');
            const summary = document.getElementById('detail-summary');

            content.innerHTML = tx.items.map(item => `
                <div class="flex justify-between items-start py-3 border-b border-gray-50">
                    <div class="flex-1 pr-4">
                        <p class="font-bold text-gray-800 text-sm">${item.name}</p>
                        <p class="text-[10px] text-gray-400 font-mono">${item.barcode}</p>
                    </div>
                    <p class="font-bold text-gray-900 text-sm whitespace-nowrap">NT$ ${item.price}</p>
                </div>
            `).join('');

            summary.innerHTML = `
                <div>
                    <p class="text-xs text-gray-400">${new Date(tx.time).toLocaleString()}</p>
                    <p class="text-sm font-bold text-gray-600">${tx.items.length} รายการ</p>
                </div>
                <p class="text-2xl font-black text-blue-700 underline decoration-double">NT$ ${tx.total}</p>
            `;

            document.getElementById('detail-modal').classList.add('active');
        }

        // --- 其他核心邏輯 ---

        async function startScanner() {
            if (!('BarcodeDetector' in window)) { showToast("ไม่รองรับ (不支援掃描)"); return; }
            try {
                videoStream = await navigator.mediaDevices.getUserMedia({ video: { facingMode: "environment" } });
                const video = document.getElementById('video-preview');
                video.srcObject = videoStream;
                document.getElementById('start-btn').classList.add('hidden');
                document.getElementById('stop-btn').classList.remove('hidden');
                const detector = new BarcodeDetector({ formats: ['ean_13', 'ean_8', 'qr_code', 'code_128', 'upc_a'] });
                scanInterval = setInterval(async () => {
                    if (document.querySelectorAll('.modal.active').length) return;
                    const barcodes = await detector.detect(video).catch(() => []);
                    if (barcodes.length) handleBarcodeFound(barcodes[0].rawValue);
                }, 600);
            } catch (e) { showToast("เปิดกล้องไม่ได้ (無法開啟相機)"); }
        }

        function stopScanner() {
            if (videoStream) videoStream.getTracks().forEach(t => t.stop());
            clearInterval(scanInterval);
            document.getElementById('start-btn').classList.remove('hidden');
            document.getElementById('stop-btn').classList.add('hidden');
        }

        function handleBarcodeFound(code) {
            if (cart.length > 0 && cart[0].barcode === code && (Date.now() - cart[0].timestamp < 2000)) return;
            if (products[code]) { addToCart(code, products[code]); } 
            else { openProductModal(code, "พบบาร์โค้ดใหม่ (發現新條碼)"); }
        }

        function addToCart(code, product) {
            cart.unshift({ ...product, barcode: code, timestamp: Date.now(), id: Math.random() });
            if (navigator.vibrate) navigator.vibrate(100);
            renderCart();
            showToast(`เพิ่ม: ${product.name}`);
        }

        function openProductModal(code, title) {
            pendingBarcode = code;
            document.getElementById('modal-title').innerText = title;
            document.getElementById('modal-barcode').innerText = code;
            document.getElementById('new-product-name').value = products[code]?.name || "";
            document.getElementById('new-product-price').value = products[code]?.price || "";
            document.getElementById('product-modal').classList.add('active');
        }

        function closeModal(id) { document.getElementById(id).classList.remove('active'); }

        function saveNewProduct() {
            const name = document.getElementById('new-product-name').value.trim();
            const price = parseInt(document.getElementById('new-product-price').value);
            if (!name || isNaN(price)) return;
            products[pendingBarcode] = { name, price };
            localStorage.setItem('pos_custom_products', JSON.stringify(products));
            cart.forEach(i => { if(i.barcode === pendingBarcode) { i.name = name; i.price = price; }});
            if (!cart.some(i => i.barcode === pendingBarcode)) addToCart(pendingBarcode, {name, price});
            renderCart();
            closeModal('product-modal');
        }

        function renderCart() {
            const container = document.getElementById('cart-items');
            const totalDisplay = document.getElementById('total-price');
            const countDisplay = document.getElementById('item-count');
            if (!cart.length) {
                container.innerHTML = `<div class="py-12 text-center text-gray-300 italic text-sm">กรุณาสแกนสินค้า...</div>`;
                totalDisplay.innerText = "0"; countDisplay.innerText = "0 รายการ"; return;
            }
            let total = 0;
            container.innerHTML = cart.map(item => {
                total += item.price;
                return `<div class="flex justify-between items-center bg-gray-50 p-5 rounded-3xl border border-gray-100 shadow-sm relative">
                    <div class="flex-1">
                        <p class="font-bold text-gray-800">${item.name}</p>
                        <button onclick="openProductModal('${item.barcode}', 'แก้ไขสินค้า')" class="mt-2 text-blue-600 text-xs font-bold bg-blue-50 px-3 py-1 rounded-full">แก้ไข (修改)</button>
                    </div>
                    <div class="text-right flex flex-col items-end gap-3">
                        <p class="font-black text-xl">NT$ ${item.price}</p>
                        <button onclick="removeItem(${item.id})" class="text-gray-300 p-1"><svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg></button>
                    </div>
                </div>`;
            }).join('');
            totalDisplay.innerText = total.toLocaleString();
            countDisplay.innerText = `${cart.length} รายการ`;
        }

        function removeItem(id) { cart = cart.filter(i => i.id !== id); renderCart(); }

        function checkout() {
            if (!cart.length) return;
            const total = cart.reduce((s, i) => s + i.price, 0);
            salesHistory.push({
                id: Date.now(),
                time: new Date().toISOString(),
                // 儲存當時的快照，避免未來修改產品名稱影響歷史紀錄
                items: cart.map(i => ({ name: i.name, price: i.price, barcode: i.barcode })),
                total: total
            });
            localStorage.setItem('pos_sales_history', JSON.stringify(salesHistory));
            showToast("結帳成功！");
            cart = []; renderCart();
        }

        function showToast(msg) {
            const t = document.getElementById('toast');
            t.innerText = msg; t.classList.replace('opacity-0', 'opacity-100');
            setTimeout(() => t.classList.replace('opacity-100', 'opacity-0'), 2500);
        }

        window.onload = () => renderCart();
    </script>
</body>
</html>
